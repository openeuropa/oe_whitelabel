{% include '@oe-bcl/bcl-offcanvas/offcanvas.html.twig' with {
  'title': {
      'label': title,
      'heading': 4,
      'extra_classes': "mb-lg-4",
   },
  'placement': placement,
  'id': offcanvas_id,
  'body': body,
  'with_body_scroll': with_body_scroll,
  'with_backdrop': with_backdrop,
  'extra_classes_body': extra_classes_body,
  'extra_classes_header': extra_classes_header,
  'extra_classes_close': extra_classes_close,
} %}
{% if with_trigger %}
  <button class="btn btn-primary d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#{{ offcanvas_id }}" aria-controls="{{ offcanvas_id }}">
    {{ title }}
  </button>
{% endif %}