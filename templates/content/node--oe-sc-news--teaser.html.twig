{#
/**
 * @file
 * Theme override to display a node of bundle news in the teaser view mode.
 */
#}
{% set _title %}
  <a class="standalone" href="{{ url }}">{{ label }}</a>
{% endset %}
{% block content %}
<article{{attributes}}>
  {{ pattern('card', {
    variant: 'search',
    title: _title,
    text: content.oe_summary,
    image: image,
    meta: [
      content.oe_publication_date|field_value
    ],
  }) }}
</article>
{% endblock %}
