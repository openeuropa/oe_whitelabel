<div{{ attributes }}>
  {{ pattern('content_banner', {
    background: 'gray',
    title: label,
    content: content.oe_summary,
    image: image,
    meta: [
      content.oe_publication_date|field_value,
    ],
    action_bar: content.group_action_bar,
  }) }}
</div>
