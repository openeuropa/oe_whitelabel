{#
/**
 * @file
 * Theme override for OpenEuropa branding (EU/EC/Neutral) block.
 */
#}

{% block content %}
<a class="navbar-brand" target="_blank" href="{{ site_logo_href }}">
  {% if bcl_component_library == 'eu' %}
    <picture>
      <source media="(max-width: 992px)" srcset="{{ bcl_logo_path ~ 'eu/mobile/logo-eu--' ~ current_language_id|to_internal_language_id ~ '.svg'}}">
        <img src="{{ bcl_logo_path ~ 'eu/logo-eu--' ~ current_language_id|to_internal_language_id ~ '.svg'}}" alt="{{ site_logo_alt }}" title="{{ site_logo_title }}" />
    </picture>
  {% elseif bcl_component_library == 'ec'%}
    <img src="{{ bcl_logo_path ~ 'ec/logo-ec--' ~ current_language_id|to_internal_language_id ~ '.svg'}}" alt="{{ site_logo_alt }}" title="{{ site_logo_title }}" />
  {% else %}
    <img src="{{ site_logo }}" alt="{{ site_logo_alt }}" title="{{ site_logo_title }}"/>
    <div class="h5 ms-4-5 d-none d-lg-inline-block">{{ site_name }}</div>
  {% endif %}
</a>
{% endblock %}
