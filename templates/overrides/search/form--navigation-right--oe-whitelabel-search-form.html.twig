{#
/**
 * @file
 * Template for the navigation right search form element .
 *
 * @see ./core/modules/system/templates/form.html.twig
 */
#}
{% set submit = element.submit|merge({
  '#type': 'pattern',
  '#variant': 'light',
  '#icon': 'search',
  '#id': 'button',
  '#fields': {
    'icon': 'search',
    'settings': {
      'type': 'submit',
    },
    'attributes': {
      'id': 'submit',
      'class': [
        'border-start-0',
        'rounded-0',
        'rounded-end',
        'px-3',
      ],
    },
  },
})%}

{% set element = element|merge({submit}) %}

<form action="search" {{ attributes.addClass('d-flex', 'mt-3', 'mt-lg-0') }}>
  {{ element.search_input }}
  {{ element.submit }}
  {{ element.form_build_id }}
  {{ element.form_token }}
  {{ element.form_id }}
</form>
