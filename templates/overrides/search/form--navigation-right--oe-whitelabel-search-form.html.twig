{# todo button drupal attributes #}
{% set submit_button = pattern('button', {
  'variant': 'light',
  'icon': 'search',
  'type': 'submit',
  'attributes': {
    'id': 'submit',
    'class': [
      'border-start-0',
      'rounded-0',
      'rounded-end',
      'px-3',
    ],
  },
})%}

{% set submit = element.submit|merge({
  '#markup': submit_button|render,
  })
%}

<form {{ attributes.addClass('d-flex', 'mt-3', 'mt-lg-0') }}>
  {{ children }}
</form>
