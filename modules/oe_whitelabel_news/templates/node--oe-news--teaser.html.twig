{#
/**
 * @file
 * Search result template.
 */
#}
{% set badges = [] %}
{% if content.oe_featured_media[0] is defined and content.oe_featured_media[0]['#markup'] is not empty %}
  {% set image = {
    path: content.oe_featured_media[0]['#markup'],
    position: "top",
  } %}
{% endif %}
{{ pattern('card', {
  horizontal: true,
  horizontal_grid: {
    left_col_classes: "col-md-3",
    right_col_classes: "col-md-9",
    gutter: 0,
  },
  title: {
    content: label,
    classes: "mb-4",
  },
  subtitle: {
    content: content.oe_publication_date|render|striptags,
    classes: "mb-4",
  },
  text: {
    content: content.body|render|striptags,
    classes: "mb-4",
  },
  attributes: attributes.addClass(["border-0", "mb-5"]),
  image: image,
  content: badges|render
}) }}
